<?xml version='1.0' encoding='utf-8' ?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:notesapp="http://schemas.android.com/apk/res-auto">
  <RelativeLayout android:id="@id/relativeLayout"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  notesapp:layout_constraintEnd_toEndOf="parent"
                  notesapp:layout_constraintStart_toStartOf="parent"
                  notesapp:layout_constraintTop_toTopOf="parent">
    <TextView android:textSize="28.0sp"
              android:textStyle="bold"
              android:textColor="@color/blue"
              android:id="@id/notesHeading"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="16.0dp"
              android:text="@string/my_notes"
              android:layout_alignParentTop="true"
              android:fontFamily="@font/lora"
              android:layout_marginStart="16.0dp" />
    <ImageView android:id="@id/addButton"
               android:layout_width="30.0dp"
               android:layout_height="30.0dp"
               android:layout_marginTop="16.0dp"
               android:src="@drawable/add"
               android:layout_marginEnd="16.0dp"
               android:layout_alignParentEnd="true" />
    <androidx.appcompat.widget.SearchView android:id="@id/searchView"
                          android:layout_width="390.0dp"
                          android:layout_height="50.0dp"
                          android:layout_marginTop="60.0dp"
                          android:layout_centerHorizontal="true"
                          notesapp:queryHint="@string/search_title" />
    <androidx.recyclerview.widget.RecyclerView android:id="@id/notesRecyclerView"
                          android:padding="16.0dp"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_marginTop="0.0dp"
                          android:layout_below="@id/searchView" />
  </RelativeLayout>
  <com.google.android.gms.ads.AdView android:id="@id/adView"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        notesapp:adSize="BANNER"
                        notesapp:adUnitId="ca-app-pub-1361928519963971/7428096783"
                        notesapp:layout_constraintBottom_toBottomOf="parent"
                        notesapp:layout_constraintEnd_toEndOf="parent"
                        notesapp:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>